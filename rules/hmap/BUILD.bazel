load("@rules_cc//cc:defs.bzl", "cc_binary", "cc_library", "cc_test")

HMAP_COPTS = [
    "-DHASH_FUNCTION=HASH_MUR",
    "-DHASH_USING_NO_STRICT_ALIASING",
    "-fno-strict-aliasing",
]

HMAP_VISIBILITY = ["//visibility:public"]

cc_binary(
    name = "hmaptool",
    srcs = [
        "hmap.c",
        "hmap.h",
        "hmapbuild.c",
        "uthash.h",
    ],
    copts = HMAP_COPTS,
    visibility = HMAP_VISIBILITY,
    deps = [
        ":lines",
    ],
)

cc_library(
    name = "lines",
    srcs = [
        "lines.c",
    ],
    hdrs = [
        "lines.h",
    ],
    copts = ["-Wno-parentheses"],
    visibility = HMAP_VISIBILITY,
)

cc_binary(
    name = "hmapdump",
    srcs = [
        "hmap.c",
        "hmap.h",
        "hmapdump.c",
        "uthash.h",
    ],
    copts = HMAP_COPTS,
    visibility = HMAP_VISIBILITY,
)

cc_test(
    name = "hmaptest",
    srcs = [
        "hmap.c",
        "hmap.h",
        "hmaptest.c",
        "uthash.h",
    ],
    visibility = ["//visibility:private"],
)
