load("//rules:framework.bzl", "apple_framework")
load("//rules:test.bzl", "ios_unit_test")

apple_framework(
    name = "ObjcFramework",
    srcs = [
        "DummyAssembly.S",
        "HeaderA.h",
        "main.m",
    ],
    platforms = {"ios": "10.0"},
    visibility = ["//visibility:public"],
)

apple_framework(
    name = "ObjcFrameworkTestLib",
    srcs = glob(
        [
            "testing/**/*.h",
            "testing/**/*.m",
        ],
    ),
    platforms = {"ios": "10.0"},
    deps = [
        ":ObjcFramework",
    ],
)

ios_unit_test(
    name = "ObjcFrameworkTests",
    srcs = glob(
        [
            "tests/**/*.h",
            "tests/**/*.m",
        ],
    ),
    minimum_os_version = "10.0",
    visibility = ["//visibility:public"],
    deps = [":ObjcFrameworkTestLib"],
)

filegroup(
    name = "additional_files",
    srcs = [
        "additional_files/foo.podspec",
    ],
    visibility = ["//visibility:public"],
)
